<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot">

    <link name="world"></link>

    <joint name="base_joint" type="fixed">
        <origin xyz="1.5 1.0 0" rpy="0 0 0" />
        <parent link="world" />
        <child link="base_link" />
    </joint>

    <link name="base_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.025" />
            <geometry>
                <box size="0.1 0.1 0.05" />
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.025" />
            <geometry>
                <box size="0.1 0.1 0.05" />
            </geometry>
        </collision>
        <inertial>
            <mass value="1" />
            <origin rpy="0 0 0" xyz="0 0 0" />
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
        </inertial>
    </link>

    <link name="base_plate">
        <visual>
            <geometry>
                <cylinder radius="0.04" length="0.005" />
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0.0025" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.04" length="0.005" />
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0.0025" />
        </collision>
        <inertial>
            <mass value="1" />
            <origin rpy="0 0 0" xyz="0 0 0" />
            <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
        </inertial>
    </link>

    <joint name="base_plate_to_base_link" type="revolute">
        <axis xyz="0 0 1" />
        <limit effort="1000" lower="0" upper="3.1415" velocity="1" />
        <origin xyz="0 0 0.05" />
        <parent link="base_link" />
        <child link="base_plate" />
    </joint>

    <link name="base_plate_attachment">
        <visual>
            <geometry>
                <box size="0.025 0.04 0.05" />
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0.025" />
        </visual>
        <collision>
            <geometry>
                <box size="0.025 0.04 0.05" />
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0.025" />
        </collision>
        <inertial>
            <mass value="1" />
            <origin rpy="0 0 0" xyz="0 0 0" />
            <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
        </inertial>
    </link>

    <joint name="base_plate_to_attachment" type="fixed">
        <origin xyz="0 0 0.005" />
        <parent link="base_plate" />
        <child link="base_plate_attachment" />
    </joint>

    <link name="mid_arm">
        <visual>
            <geometry>
                <box size="0.025 0.04 0.125" />
            </geometry>
            <origin rpy="-1.5707963 0 0" xyz="0 -0.05 0" />
        </visual>
        <collision>
            <geometry>
                <box size="0.025 0.04 0.125" />
            </geometry>
            <origin rpy="-1.5707963 0 0" xyz="0 -0.05 0" />
        </collision>
        <inertial>
            <mass value="1" />
            <origin rpy="0 0 0" xyz="0 0 0" />
            <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
        </inertial>
    </link>

    <joint name="mid_arm_to_attachment" type="revolute">
        <axis xyz="-1 0 0" />
        <limit effort="1000" lower="0" upper="3.1415" velocity="1" />
        <origin xyz="0.025 0 0.025" />
        <parent link="base_plate_attachment" />
        <child link="mid_arm" />
    </joint>

    <link name="top_arm">
        <visual>
            <geometry>
                <box size="0.025 0.04 0.085" />
            </geometry>
            <origin rpy="-1.5707963 0 0" xyz="0 -0.025 0" />
        </visual>
        <collision>
            <geometry>
                <box size="0.025 0.04 0.085" />
            </geometry>
            <origin rpy="-1.5707963 0 0" xyz="0 -0.025 0" />
        </collision>
        <inertial>
            <mass value="1" />
            <origin rpy="0 0 0" xyz="0 0 0" />
            <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
        </inertial>
    </link>

    <joint name="top_arm_to_mid_arm" type="revolute">
        <axis xyz="-1 0 0" />
        <limit effort="1000" lower="0" upper="3.1415" velocity="1" />
        <origin xyz="-0.025 -0.1 0" />
        <parent link="mid_arm" />
        <child link="top_arm" />
    </joint>
    <inertial>
        <mass value="1" />
        <origin rpy="0 0 0" xyz="0 0 0" />
        <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
    </inertial>

    <gazebo reference="base_link">
        <material>Gazebo/Red</material>
    </gazebo>

    <gazebo reference="base_plate">
        <material>Gazebo/Red</material>
    </gazebo>

    <gazebo reference="base_plate_attachment">
        <material>Gazebo/Red</material>
    </gazebo>

    <gazebo reference="mid_arm">
        <material>Gazebo/Red</material>
    </gazebo>

    <gazebo reference="top_arm">
        <material>Gazebo/Red</material>
    </gazebo>

    <gazebo>
        <plugin name="gazebo_ros_joint_state_publisher"
            filename="libgazebo_ros_joint_state_publisher.so">
            <update_rate>20</update_rate>
            <joint_name>base_plate_to_base_link</joint_name>
            <joint_name>base_plate_to_attachment</joint_name>
            <joint_name>mid_arm_to_attachment</joint_name>
            <joint_name>top_arm_to_mid_arm</joint_name>
        </plugin>
    </gazebo>

</robot>